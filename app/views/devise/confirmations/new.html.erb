<%- title("Wyślij ponownie link aktywacyjny") -%>

<div class="ui form segment">
	<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>

		<%= render partial: "layouts/form_errors", locals: { errors: resource.errors } -%>

		<div class="field">
		  Adres email
		  <%= f.email_field :email, :autofocus => true %>
		</div>

		<div class="ui small buttons">
			<%= f.submit "Wyślij ponownie link aktywacyjny", class: 'ui green confirm button' %>
			<%= render "devise/shared/links" %>
		</div>

	<% end %>
</div>