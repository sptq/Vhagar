<div id="login-container">
    <div id="login-form">
        <div class="ui form segment">
            <h1 class="ui header">Logowanie</h1>
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                <div class="field">
                    <%= f.label :email %>
                    <div class="ui left labeled icon input">
                        <%= f.email_field :email, :autofocus => true, :placeholder => 'email@localhost' %>
                        <i class="user icon"></i>
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>

                <div class="field">
                    <%= f.label :password %>
                    <div class="ui left labeled icon input">
                        <%= f.password_field :password %>
                        <i class="lock icon"></i>
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <div class="field">
                        <div class="ui toggle checkbox"><%= f.check_box :remember_me %> <%= f.label "ZapamiÄ™taj" %></div>
                    </div>
                <% end -%>

                <div class="ui small buttons">
                    <%= f.submit "Zaloguj", class: "ui green positive button" %>

                    <%= render "devise/shared/links" %>
                </div>

            <% end %>
        </div>
    </div>
</div>