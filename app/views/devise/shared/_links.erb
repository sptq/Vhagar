<%- if controller_name != 'sessions' %>
	<%= link_to "Zaloguj", new_session_path(resource_name), class: "ui blue button" %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	<%= link_to "Zarejestruj", new_registration_path(resource_name), class: "ui teal button" %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
	<%= link_to "Zapomniałem hasła", new_password_path(resource_name), class: "ui red button" %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	<%= link_to "Nie dostałem instrukcji logowania", new_confirmation_path(resource_name), class: "ui orange button" %>
<% end -%>