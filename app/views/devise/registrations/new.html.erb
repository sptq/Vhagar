<br /><br />
<div class="ui piled feed segment">
  <h2 class="ui header">
    Oto pierwszy krok zakładania konta w panelu uczestnika.
  </h2>
  <div class="event">
  	Konferencja Lubelskie Dni Informatuki 2014 już niebawem.
  </div>
</div>

<div class="ui form segment">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<div class="ui error message">
		<%= devise_error_messages! %>
	</div>


	<div class="field">
		<%= f.label :email %>

		<div class="ui left labeled icon input">
			<%= f.email_field :email, :autofocus => true, :placeholder => "email@ldi.org.pl" %>
			<i class="user icon"></i>
			<div class="ui corner label">
				<i class="icon asterisk"></i>
			</div>
		</div>
	</div>

	<div class="field">
		<div><%= f.label :password %><br />
			<div class="ui left labeled icon input">
				<%= f.password_field :password %>

				<i class="lock icon"></i>
				<div class="ui corner label">
					<i class="icon asterisk"></i>
				</div>
			</div>
		</div>
	</div>

	<div class="field">
		<div><%= f.label :password_confirmation %><br />
			<div class="ui left labeled icon input">
				<%= f.password_field :password_confirmation %>

				<i class="lock icon"></i>
				<div class="ui corner label">
					<i class="icon asterisk"></i>
				</div>
			</div>
		</div>
	</div>


	<div class="ui small buttons">
		<%= f.submit "Zarejestruj", class: 'ui green submit button' %>

	</div>
	<% end %>

</div>
