<%- title("Edycja konta") -%>

<div class="ui form segment">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

	<%= render partial: "layouts/form_errors", locals: { errors: resource.errors } -%>

	<div class="field">
		<%= f.label :email %>

		<div class="ui left labeled icon input">
			<%= f.email_field :email, :autofocus => true %>
			<i class="user icon"></i>
			<div class="ui corner label">
				<i class="icon asterisk"></i>
			</div>
		</div>
	</div>

	<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
		<div>Aktualnie czekamy na potwierdzenie: <%= resource.unconfirmed_email %></div>
	<% end %>

	<div class="field">
		<div><%= f.label "Hasło" %> <i>(pozostaw puste jeżeli nie chcesz zmieniać)</i><br />
			<div class="ui left labeled icon input">
				<%= f.password_field :password, autocomplete: "off" %>

				<i class="lock icon"></i>
				<div class="ui corner label">
					<i class="icon asterisk"></i>
				</div>
			</div>
		</div>
	</div>

	<div class="field">
		<div><%= f.label "Potwierdzenie hasła" %><br />
			<div class="ui left labeled icon input">
				<%= f.password_field :password_confirmation %>

				<i class="lock icon"></i>
				<div class="ui corner label">
					<i class="icon asterisk"></i>
				</div>
			</div>
		</div>
	</div>

	<div class="field">
		<div><%= f.label "Aktualne hasło" %> <i>(wymagane aby potwierdzić zmiany)</i><br />
			<div class="ui left labeled icon input">
				<%= f.password_field :current_password %>

				<i class="lock icon"></i>
				<div class="ui corner label">
					<i class="icon asterisk"></i>
				</div>
			</div>
		</div>
	</div>

	<div class="field">
		<div class="ui checkbox">
			<%= f.check_box :acceptMarketingTerms %>
			<%= label_tag :acceptMarketingTerms, "Chcę być informowany o innych wydarzeniach tego typu" -%>
		</div>
	</div>	

	<div class="field">
		<div class="ui checkbox">
			<%= f.check_box :acceptTerms %>
			<%= label_tag :acceptTerms, "Akceptuje regulamin konferencji Check IT 2014" -%>
		</div>
	</div>

	<div class="ui small buttons">
		<%= link_to "Wróć", :back, class: "ui teal button"%>
		<%= f.submit "Aktualizuj", class: "ui green submit button" %>
		<%= link_to "Usuń konto", registration_path(resource_name), class: "ui red submit button", :data => { :confirm => "Are you sure?" }, :method => :delete %>
	</div>
	<% end %>
</div>

</div>