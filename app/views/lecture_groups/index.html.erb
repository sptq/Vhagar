<h1>Listing lecture_groups</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lecture_groups.each do |lecture_group| %>
      <tr>
        <td><%= lecture_group.title %></td>
        <td><%= lecture_group.description %></td>
        <td><%= link_to 'Show', lecture_group %></td>
        <td><%= link_to 'Edit', edit_lecture_group_path(lecture_group) %></td>
        <td><%= link_to 'Destroy', lecture_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

