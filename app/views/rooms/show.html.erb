<div class="ui piled segment">
  <h1 class="ui header"><%= @room.title -%></h1>

  <p><%= @room.description -%></p>

  <%- if @room.capacity > 0 -%>
    <h2 class="ui header">Ilość miejsc: <%= @room.capacity -%></h2>
  <%- end -%>

  <h2 class="ui header">Powiązane wydarzenia:</h2>
  <div class="ui relaxed divided selection list">
    <% @room.lectures.each do |lecture| %>
      <div class="item">
        <div class="ui horizontal label"><%= lecture.start_date.to_s :short %></div>
        <%= link_to lecture.title, lecture, class: "header" %>
      </div>
    <% end %>
  </div>
</div>

<div class="ui small buttons">
  <%= link_to 'Back', rooms_path, class: "ui red button" %>

  <%- if can? :edit, @room -%>
      <%= link_to 'Edit', edit_room_path(@room), class: "ui small positive button" %>
  <%- end -%>
</div>
