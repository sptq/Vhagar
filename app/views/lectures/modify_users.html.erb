<%- title("Modyfikacja listy użytkowników - #{@lecture.title}") -%>

<div class="ui two column stackable grid">
	<div class="column">
		<%= render "preview" %>

		<div class="ui stacked orange segment">
			<%- if can? :see_participants, @lecture -%>
				<%= render partial: 'users/list', locals: { users: @lecture.participants.includes(:participations, :profile), show_controls: true } -%>
			<%- end -%>
		</div>
	</div>
	<div class="column">
		<div class="ui stacked red segment">
			<%= render partial: "users/list", locals: { users: @users, show_controls: true } -%>
		</div>
	</div>
</div>

<div class="ui small buttons">
	<%= link_to 'Wróć', :back, class: "ui red button" %>
	<%= link_to 'Pokaż', @lecture, class: "ui teal button" if can? :show, @lecture -%>
	<%= link_to 'Edytuj', edit_lecture_path(@lecture), class: "ui small positive button" if can? :edit, @lecture %>
</div>
