<div class="ui warning form segment">

	<%= form_for(@user) do |f| %>
		<%= render partial: "layouts/form_errors", locals: { errors: @user.errors } -%>

		<div class="field">
			<%= f.label :email %>
			<%= f.text_field :email, readonly: :true %>
		</div>

		<% if can? :promote, User %>
		<div class="field">
			<%= f.label :user_role %>
			<%= f.select :user_role, User::ROLES %>
		</div>
		<% end %>

		<div class="ui small buttons">
			<%= yield :form_buttons %>
			<%= f.submit class: "ui green button" %>
		</div>
	<% end %>
</div>