<div class="ui warning form segment">

	<%= form_for @user, url: user_path(@user), html: { method: :put } do |f| %>

	<div class="field">
		<%= f.label :email %>
		<%= f.text_field :email, readonly: :true %>
	</div>

	<div class="field">
		<%= f.label :user_role %>
		<%= f.select :user_role, User::ROLES %>
	</div>

	<div class="ui small buttons">
		<%= yield :form_buttons %>
		<%= f.submit class: "ui green button" %>
	</div>

	<% end %>

</div>